				'LATITUDE_SAMPAI' 	=> isset($data['LATITUDE_SAMPAI'])? $data['LATITUDE_SAMPAI'] : '',
				'LONGITUDE_SAMPAI' 	=> isset($data['LONGITUDE_SAMPAI'])? $data['LONGITUDE_SAMPAI'] : '',
				'LATITUDE_SELESAI' 	=> isset($data['LATITUDE_SELESAI'])? $data['LATITUDE_SELESAI'] : '',
				'LONGITUDE_SELESAI' => isset($data['LONGITUDE_SELESAI'])? $data['LONGITUDE_SELESAI'] : ''
			];
		}
		else{
			$data_hasil = [];
		}

		$this->response($data_hasil);
	}

    public function isValidJSON($str) {
       json_decode($str);
       return json_last_error() == JSON_ERROR_NONE;
    }

    public function getDataFromApp(){
        if(isset($GLOBALS['HTTP_RAW_POST_DATA'])){
            $dataJson = $GLOBALS['HTTP_RAW_POST_DATA'];
        }
        else{
            $dataJson = file_get_contents('php://input');
        }

        if (strlen($dataJson) > 0 && self::isValidJSON($dataJson)){
            $value = json_decode($dataJson, true);

            if(isset($value[0]) && is_array($value[0])){
                $value = $value[0];
            }

            return $value;
        }

        return false;
    }

	public function insert_post()
	{
		$this->load->model('M_Tracking');
		$token 				= $this->check_token_post2();

		// Cek nomor do sudah ada belum di tracking, jika sudah ada jangan diinsert

		$cek_data = $this->M_Tracking->getAllTracking(['NOMOR_DO' => $this->input->post('NOMOR_DO')]);

		if(count($cek_data) > 0){
			$response       = [
                'status'    => 'failed',
                'message'   => 'Data gagal disimpan!'
            ];
            $this->response($response);
            exit;
		}
		else{
			$data_insert = [
				'KODE_DISTRIBUTOR' 	=> $this->input->post('KODE_DISTRIBUTOR'),
				'KODE_TOKO'			=> $this->input->post('KODE_TOKO'),
				'NOMOR_DO'			=> $this->input->post('NOMOR_DO'),
				'TANGGAL_SAMPAI'	=> $this->input->post('TANGGAL_SAMPAI'),
				'WAKTU_SAMPAI'		=> $this->input->post('WAKTU_SAMPAI'),
				'LATITUDE_SAMPAI'	=> $this->input->post('LATITUDE_SAMPAI'),
				'LONGITUDE_SAMPAI'	=> $this->input->post('LONGITUDE_SAMPAI'),
				'CREATED_DATE'		=> date('d-m-Y'),
				'CREATED_TIME'		=> date('H:i:s'),
				'CREATED_BY'		=> $this->input->post('CREATED_BY')
			];

			$status = $this->M_Tracking->insertTracking($data_insert);

			if($status != FALSE){

				// upload image
				$FOTO 		= $_POST['FOTO_SAMPAI'];
				$basepath 	= FCPATH . 'uploads/images/';
				$filename 	= $status. '_SAMPAI.jpg';
				$filepath 	= $basepath . $filename;
				$file 		= fopen($filepath, 'wb');
				fwrite($file, base64_decode($FOTO));
				fclose($file);

				// update foto_sampai
				$this->M_Tracking->update($status, ['FOTO_SAMPAI' => $filename]);

				$response       = [
                    'status'    => 'success',
                    'message'   => 'Data berhasil disimpan!'
                ];
                $this->response($response);
                exit;
			}
			else{
				$response       = [
                    'status'    => 'failed',
                    'message'   => 'Data gagal disimpan!'
                ];
                $this->response($response);
                exit;
			}
		}

	}

